<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="lims_pu" transaction-type="RESOURCE_LOCAL">
		<!-- <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider> -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<!-- 	<class>com.hqtsc.shared.core.user.model.User</class> -->
		
		<properties>
		    <property name="javax.persistence.validation.mode" value="none"/>
		    <property name="hibernate.hbm2ddl.auto" value="none" />
			<property name="hibernate.show_sql" value="false"/>
			
			<!-- turn on the second level cache & the query cache -->
			<property name="hibernate.cache.use_second_level_cache" value="false"/>
			<property name="hibernate.cache.use_query_cache" value="false"/>
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			
			<!-- 用于JPA批量操作数据库 -->
			<property name="hibernate.jdbc.batch_size" value="500" />
			<property name="hibernate.order_inserts" value="true"/>
			<property name="hibernate.order_updates" value="true"/>
		</properties>
	</persistence-unit>
	
</persistence>